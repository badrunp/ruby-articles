<h1>Articles</h1>
<p>Status Public: <%= Article.public_count %> </p>
<% @articles.each do |article| %>
    <% unless article.archived? %>
    <ul>
        <li>title: <%= link_to article.title, article_path(article) %></li>
        <li>body: <%= article.body %></li>
    </ul>
    <% end %>
<% end %>

<%= link_to "New Article", new_article_path %>
